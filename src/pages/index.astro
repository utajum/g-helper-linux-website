---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <a href="/screenshot.png" target="_blank">
      <img src="/screenshot.png" alt="G-Helper for Linux" />
    </a>
    <p class="github-link">
      <a href="https://github.com/utajum/g-helper-linux" target="_blank" rel="noopener">
        View on GitHub
      </a>
    </p>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 1rem;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  img:hover {
    transform: scale(1.02);
  }

  .github-link {
    margin-top: 1.5rem;
  }

  .github-link a {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
  }

  .github-link a:hover {
    text-decoration: underline;
  }

  @media (prefers-color-scheme: dark) {
    .github-link a {
      color: #a0a0a0;
    }
  }

  @media (prefers-color-scheme: light) {
    .github-link a {
      color: #555555;
    }
  }
</style>
